<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hmrz.mybatis.cooperation">
    
    <select id="getCooperationList" parameterType="Page" resultType="CooperationBean">
    	select  id,name,tel,company,submit_time,remark from c_cooperation 
    	 ORDER BY id desc
		<if test="havePage == 1">
			LIMIT #{start}, #{rows}
		</if>
    </select>
    
    <select id="getCooperationCount" resultType="int">
    	select count(1) from c_cooperation
    </select>
    
    <select id="getCooperationById" parameterType="String" resultType="CooperationBean">
    	select name,tel,mail,company,
    	buget,business_area,business_demand
    	from c_cooperation where id = #{id}
    </select>
    
    <delete id="deleteCooperation" parameterType="String">
    	delete from c_cooperation where id = #{id}
    </delete>
    
    <insert id="add" parameterType="CooperationBean">
        INSERT INTO c_cooperation(name ,tel ,mail ,company ,buget ,business_area ,business_demand)
        VALUE(#{name}, #{tel}, #{mail}, #{company}, #{buget}, #{business_area}, #{business_demand})
    </insert>
    
</mapper>